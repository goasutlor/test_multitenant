{
  "name": "Presale Contribution System",
  "description": "Presale Team Contribution Management System with PostgreSQL",
  "services": [
    {
      "name": "web",
      "source": {
        "repo": "goasutlor/presale-contribution-system",
        "branch": "main"
      },
      "build": {
        "builder": "DOCKERFILE",
        "dockerfilePath": "Dockerfile"
      },
      "deploy": {
        "startCommand": "npm start",
        "healthcheckPath": "/",
        "healthcheckTimeout": 30
      },
      "environment": {
        "NODE_ENV": "production",
        "PORT": "5001",
        "JWT_SECRET": "your-super-secret-jwt-key-change-in-production",
        "CORS_ORIGIN": "https://*.railway.app"
      }
    },
    {
      "name": "postgres",
      "image": "postgres:15",
      "environment": {
        "POSTGRES_DB": "presale_contributions",
        "POSTGRES_USER": "postgres",
        "POSTGRES_PASSWORD": "postgres"
      }
    }
  ],
  "variables": {
    "DATABASE_URL": "postgresql://postgres:postgres@postgres:5432/presale_contributions"
  }
}
