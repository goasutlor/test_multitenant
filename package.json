{
  "name": "presale-contribution-system",
  "version": "1.0.0",
  "description": "Presale Team Contribution Management System",
  "main": "dist/server/index.js",
  "scripts": {
    "dev": "concurrently \"npm run dev:server\" \"npm run dev:client\"",
    "dev:server": "nodemon --exec ts-node src/server/start.ts",
    "dev:client": "cd client && npm start",
    "build": "npm run build:server && npm run build:client",
    "build:server": "tsc -p tsconfig.server.json",
    "build:client": "cd client && npm run build",
    "start": "node dist/server/index.js",
    "start:http": "node dist/server/index.js",
    "start:https": "NODE_ENV=production node dist/server/index.js",
    "start:production": "set NODE_ENV=production && node dist/server/index.js",
    "ssl:generate": "node create-ssl-cert.js",
    "test": "jest",
    "test:functional": "npm run test:server && npm run test:client",
    "test:server": "jest --config jest.server.config.js",
    "test:client": "cd client && npm test",
    "docker:build": "docker build -t presale-contribution-system .",
    "docker:run": "docker run -p 3000:3000 -p 5001:5001 presale-contribution-system",
    "docker:run:https": "docker run -p 3000:3000 -p 5443:5443 -e NODE_ENV=production presale-contribution-system",
    "backup:create": "node scripts/backup-database.js create",
    "backup:list": "node scripts/backup-database.js list",
    "backup:restore": "node scripts/backup-database.js restore",
    "admin:create": "node scripts/create-admin-user.js"
  },
  "keywords": [
    "presale",
    "contribution",
    "management",
    "team"
  ],
  "author": "Your Team",
  "license": "MIT",
  "dependencies": {
    "@types/pg": "^8.15.5",
    "bcryptjs": "^2.4.3",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "express": "^4.18.2",
    "express-validator": "^7.0.1",
    "helmet": "^7.1.0",
    "jsonwebtoken": "^9.0.2",
    "morgan": "^1.10.0",
    "multer": "^1.4.5-lts.1",
    "node-fetch": "^3.3.2",
    "nodemailer": "^7.0.6",
    "pg": "^8.16.3",
    "sqlite3": "^5.1.6",
    "uuid": "^9.0.1"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.6",
    "@types/compression": "^1.7.5",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.8",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/morgan": "^1.9.9",
    "@types/multer": "^1.4.11",
    "@types/node": "^20.10.0",
    "@types/uuid": "^9.0.7",
    "concurrently": "^8.2.2",
    "jest": "^29.7.0",
    "nodemon": "^3.0.2",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.1",
    "typescript": "^4.9.5"
  }
}
